generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id                Int         @id @default(autoincrement())
  email             String      @unique
  senha             String
  primeiro_nome     String
  ultimo_nome       String
  criado_data       DateTime    @default(now())
  atualizado_data   DateTime    @updatedAt

  transacoes        Transacao[]
  saldo             Saldo[]
}

model Transacao {
  id          Int       @id @default(autoincrement())
  usuario_id  Int
  tipo        String
  valor       Float
  data        DateTime  @default(now())
  descricao   String?

  usuario     Usuario   @relation(fields: [usuario_id], references: [id])

  @@index([usuario_id])
}

model Saldo {
  id          Int       @id @default(autoincrement())
  usuario_id  Int
  valor       Float     @default(0.0)
  data        DateTime  @default(now())

  usuario     Usuario   @relation(fields: [usuario_id], references: [id])

  @@index([usuario_id])
}

model Categoria {
  id          Int       @id @default(autoincrement())
  nome        String    @unique
  descricao   String?
}
