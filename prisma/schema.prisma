generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TipoTransacao {
  ENTRADA
  SAIDA
  INVESTIMENTO
}

enum StatusTranscao {
  PENDENTE
  EFETIVADA
}

model Usuario {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  senha      String
  nome       String
  sobrenome  String
  criado     DateTime  @default(now())
  atualizado DateTime? @updatedAt

  transacoes   Transacao[]
  saldo        Saldo?         @relation("UsuarioSaldo")
  Investimento Investimento[]
}

model Transacao {
  id        Int            @id @default(autoincrement())
  descricao String?
  valor     Float
  data      DateTime       @default(now())
  tipo      TipoTransacao
  status    StatusTranscao @default(PENDENTE)
  usuarioId Int

  usuario Usuario @relation(fields: [usuarioId], references: [id])
}

model Saldo {
  id         Int       @id @default(autoincrement())
  valor      Float     @default(0.0)
  data       DateTime  @default(now())
  atualizado DateTime? @updatedAt

  usuario   Usuario @relation("UsuarioSaldo", fields: [usuarioId], references: [id])
  usuarioId Int     @unique
}

model Investimento {
  id                 Int      @id @default(autoincrement())
  usuarioId          Int
  tipoInvestimentoId Int
  valorInvestido     Float
  dataCompra         DateTime
  dataAtualizacao    DateTime?
  resgatado          Boolean  @default(false)

  usuario          Usuario          @relation(fields: [usuarioId], references: [id])
  tipoInvestimento TipoInvestimento @relation(fields: [tipoInvestimentoId], references: [id])
}

model TipoInvestimento {
  id              Int            @id @default(autoincrement())
  nome            String         @unique
  tipo            String
  valorPercentual Float
  impostoRenda    Boolean        @default(true)
  investimentos   Investimento[]
}
