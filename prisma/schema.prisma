generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
}

enum TipoTransacao {
  ENTRADA
  SAIDA
  INVESTIMENTO
}

enum StatusTranscao {
  PENDENTE
  EFETIVADA
}

model Usuario {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  email      String    @unique
  senha      String
  nome       String
  criado     DateTime  @default(now())
  atualizado DateTime? @updatedAt

  transacoes    Transacao[]
  saldo         Saldo?         @relation("UsuarioSaldo")
  Investimento  Investimento[]
  Despesas      Despesas[]     @relation("UsuarioDespesas")
  RendaFixa     RendaFixa?     @relation("UsuarioRendaFixa")
  RendaVariavel RendaVariavel? @relation("RendaVariavel")
}

model Transacao {
  id        String         @id @default(auto()) @map("_id") @db.ObjectId
  descricao String?
  valor     Float
  data      DateTime       @default(now())
  tipo      TipoTransacao
  status    StatusTranscao @default(PENDENTE)

  usuarioId String  @db.ObjectId
  usuario   Usuario @relation(fields: [usuarioId], references: [id])
}

model Saldo {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  valor      Float     @default(0.0)
  data       DateTime  @default(now())
  atualizado DateTime? @updatedAt

  usuarioId String  @unique @db.ObjectId
  usuario   Usuario @relation("UsuarioSaldo", fields: [usuarioId], references: [id])
}

model RendaFixa {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  valor Float  @default(0.0)

  usuarioId String  @unique @db.ObjectId
  usuario   Usuario @relation("UsuarioRendaFixa", fields: [usuarioId], references: [id])
}

model RendaVariavel {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  valor     Float  @default(0.0)
  descricao String

  usuarioId String  @unique @db.ObjectId
  usuario   Usuario @relation("RendaVariavel", fields: [usuarioId], references: [id])
}

model Despesas {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  categoria       String
  valor           Float     @default(0.0)
  descricao       String
  dataVencimento  DateTime? @default(now())
  dataAgendamento DateTime?

  usuarioId String  @db.ObjectId
  usuario   Usuario @relation("UsuarioDespesas", fields: [usuarioId], references: [id])
}

model Investimento {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  dataCompra      DateTime
  dataAtualizacao DateTime?
  resgatado       Boolean   @default(false)

  usuarioId          String                  @db.ObjectId
  tipoInvestimentoId String                  @db.ObjectId
  usuario            Usuario                 @relation(fields: [usuarioId], references: [id])
  tipoInvestimento   TipoInvestimento        @relation(fields: [tipoInvestimentoId], references: [id])
  aplicacoes         AplicacaoInvestimento[]
}

model TipoInvestimento {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  nome            String         @unique
  tipo            String
  valorPercentual Float
  impostoRenda    Boolean        @default(true)
  investimentos   Investimento[]
}

model AplicacaoInvestimento {
  id    String   @id @default(auto()) @map("_id") @db.ObjectId
  tipo  String
  valor Float
  data  DateTime

  investimentoId String       @db.ObjectId
  investimento   Investimento @relation(fields: [investimentoId], references: [id])
}
